doctype html
html
  head
    title File Upload, Convert, and Download
  body
    h1 File Upload, Convert, and Download
    form(action="/upload", method="POST", enctype="multipart/form-data")
      label(for="file") Choose a file to upload:
      input(type="file", name="file", id="file")
      button(type="submit") Upload
    h2 Uploaded Files
    ul
      each file in files
        li
          a(href="/download/" + file)= file
          form(action='/remove/' + file, method='post', class='remove-form')
            button(type='submit', class='remove-button') Remove File

    // Add a new section for MP4 to GIF conversion
    h2 Convert MP4 to GIF
    form(action="/convert", method="POST")
      select(name="mp4FileName")
        each file in mp4Files
          option(value=file)= file
      button(type="submit") Convert to GIF

    // Display converted GIF files
    h2 Converted GIF Files
    ul
      each file in gifFiles
        li
          a(href="/download/" + file) #{file}
          form(action='/remove/' + file, method='post', class='remove-form')
            button(type='submit', class='remove-button') Remove File
